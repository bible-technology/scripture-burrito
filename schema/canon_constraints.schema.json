{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://burrito.bible/schema/canon_constraints.schema.json",
    "$$target": "canon_constraints.schema.json",
    "title": "Canon Constraints",
    "type": "object",
    "definitions": {
        "OTConstraint": {
            "if": {
                "properties": {
                    "canonType": {
                        "contains": {
                            "const": "OT"
                        }
                    }
                }
            },
            "then": {
                "properties": {
                    "canonSpec": {
                        "required": [
                            "OT"
                        ]
                    }
                }
            },
            "else": {
                "properties": {
                    "canonSpec": {
                        "not": {
                            "required": [
                                "OT"
                            ]
                        }
                    }
                }
            }
        },
        "OTPlusConstraint": {
            "if": {
                "properties": {
                    "canonType": {
                        "contains": {
                            "const": "OT+"
                        }
                    }
                }
            },
            "then": {
                "properties": {
                    "canonSpec": {
                        "required": [
                            "OT+"
                        ]
                    }
                }
            },
            "else": {
                "properties": {
                    "canonSpec": {
                        "not": {
                            "required": [
                                "OT+"
                            ]
                        }
                    }
                }
            }
        },
        "DCConstraint": {
            "if": {
                "properties": {
                    "canonType": {
                        "contains": {
                            "const": "DC"
                        }
                    }
                }
            },
            "then": {
                "properties": {
                    "canonSpec": {
                        "required": [
                            "DC"
                        ]
                    }
                }
            },
            "else": {
                "properties": {
                    "canonSpec": {
                        "not": {
                            "required": [
                                "DC"
                            ]
                        }
                    }
                }
            }
        },
        "NTConstraint": {
            "if": {
                "properties": {
                    "canonType": {
                        "contains": {
                            "const": "NT"
                        }
                    }
                }
            },
            "then": {
                "properties": {
                    "canonSpec": {
                        "required": [
                            "NT"
                        ]
                    }
                }
            },
            "else": {
                "properties": {
                    "canonSpec": {
                        "not": {
                            "required": [
                                "NT"
                            ]
                        }
                    }
                }
            }
        },
        "OTContraint2": {
            "if": {
                "properties": {
                    "canonType": {
                        "const": [
                            "OT"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "bookScope": {
                        "propertyNames": {
                            "$ref": "canon_spec.schema.json#/definitions/bookOT"
                        }
                    }
                }
            }
        },
        "OTDCConstraint": {
            "if": {
                "properties": {
                    "canonType": {
                        "enum": [
                            [
                                "OT+"
                            ],
                            [
                                "OT",
                                "DC"
                            ],
                            [
                                "DC",
                                "OT"
                            ]
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "bookScope": {
                        "propertyNames": {
                            "$ref": "canon_spec.schema.json#/definitions/bookOTDC"
                        }
                    }
                }
            }
        },
        "NTConstraint2": {
            "if": {
                "properties": {
                    "canonType": {
                        "const": [
                            "NT"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "bookScope": {
                        "propertyNames": {
                            "$ref": "canon_spec.schema.json#/definitions/bookNT"
                        }
                    }
                }
            }
        },
        "OTNTConstraint": {
            "if": {
                "properties": {
                    "canonType": {
                        "enum": [
                            [
                                "OT",
                                "NT"
                            ],
                            [
                                "NT",
                                "OT"
                            ]
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "bookScope": {
                        "propertyNames": {
                            "$ref": "canon_spec.schema.json#/definitions/bookOTNT"
                        }
                    }
                }
            }
        }
    }
}
