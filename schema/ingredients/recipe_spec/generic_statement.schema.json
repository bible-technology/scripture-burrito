{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://burrito.bible/schema/ingredients/recipe_spec/generic_statement.schema.json",
  "title": "Generic Statement for Scripture Burrito Recipe Spec Ingredient",
  "description": "Generic Statement for Scripture Burrito recipe spec ingredient",
  "oneOf": [
    {
      "type": "array",
      "items": [
        {
          "type": "string",
          "const": "message"
        },
        {
          "$ref": "./string_expression.schema.json"
        },
        {
          "$ref": "./number_expression.schema.json"
        }
      ],
      "minItems": 2,
      "maxItems": 3,
      "additionalItems": false
    },
    {
      "type": "array",
      "items": [
        {
          "type": "string",
          "const": "SKIP"
        }
      ],
      "minItems": 1
    },
    {
      "type": "array",
      "items": [
        {
          "type": "string",
          "const": "if"
        },
        {
          "$ref": "./boolean_expression.schema.json"
        },
        {
          "$ref": "./statement.schema.json"
        },
        {
          "$ref": "./statement.schema.json"
        }
      ],
      "minItems": 3,
      "maxItems": 4,
      "additionalItems": false
    }
  ]
}
