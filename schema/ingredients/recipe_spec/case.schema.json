{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://burrito.bible/schema/ingredients/recipe_spec/case.schema.json",
    "title": "Case for Scripture Burrito Recipe Spec Ingredient",
    "type": "object",
    "description": "Case Scripture Burrito recipe spec ingredient",
    "properties": {
        "stepType": {
            "const": "case"
        },
        "clauses": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "when": {
                        "$ref": "boolean_expression.schema.json"
                    },
                    "sequence": {
                        "$ref": "sequence.schema.json"
                    }
                },
                "required": [
                    "when",
                    "sequence"
                ]
            }
        },
        "otherwise": {
            "$ref": "sequence.schema.json"
        }
    },
    "required": [
        "stepType",
        "clauses"
    ],
    "additionalProperties": false
}
